CC = gcc
CFLAGS = -Wall -Wextra -O2
OBJS = ReinosoA-clienteFTP.o connectsock.o connectTCP.o errexit.o
BIN = clienteftp_RA

all: $(BIN)

$(BIN): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $(OBJS)

ReinosoA-clienteFTP.o: ReinosoA-clienteFTP.c
	$(CC) $(CFLAGS) -c ReinosoA-clienteFTP.c

connectsock.o: connectsock.c
	$(CC) $(CFLAGS) -c connectsock.c

connectTCP.o: connectTCP.c
	$(CC) $(CFLAGS) -c connectTCP.c

errexit.o: errexit.c
	$(CC) $(CFLAGS) -c errexit.c

clean:
	rm -f $(BIN) *.o
